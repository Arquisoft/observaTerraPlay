# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /              				controllers.Application.index()

GET		/country					controllers.Application.showCountries()
POST	/country					controllers.Application.newCountry()
POST	/country/delete/:id         controllers.Application.deleteCountry(id: Long)

GET		/indicator					controllers.Application.showIndicators()
POST	/indicator					controllers.Application.newIndicator()
POST	/indicator/delete/:id       controllers.Application.deleteIndicator(id: Long)

GET		/observation				controllers.Application.showObservations()
POST	/observation				controllers.Application.newObservation()
POST	/observation/delete/:id     controllers.Application.deleteObservation(id: Long)

POST	/api/excel/upload			controllers.Application.uploadExcel()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Ejemplo 
GET		/proxy						controllers.Proxy.index(url: String)
